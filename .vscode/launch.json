  "version": "0.2.0",
  "configurations": [

    {
      "type": "rdbg",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${workspaceFolder}/main.rb",
      "args": [],
      "askParameters": true
    },
    {
      "type": "rdbg",
      "name": "Attach with rdbg",
      "request": "attach"
    },
    {
    "type": "rdbg",
    "name": "Debug using RSpec",
    "request": "launch",
    "command": "bundle exec rspec",
    "script": "${workspaceFolder}/spec/pawn_spec.rb",
    "args": [],
    "askParameters": false
  }
  ]
}
